class Solution {
    public boolean searchMatrix(int[][] mat, int t) {
        int i=0;
        int m=mat.length;
        int n=mat[0].length;
        int j=n-1;
        while(i<m && j>=0){
            if(mat[i][j]==t){
                return true;
            }
            if(mat[i][j]<t){
                i++;
            }
            else{
                j--;
            }
        }
        return false;
    }
}
