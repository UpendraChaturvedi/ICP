class Solution {
    public int longestOnes(int[] nums, int k) {
        int i=0;
        int j=0;
        int diff=0;
        int len=0;
        int n=nums.length;
        while(j<n){
            if(nums[j]==0){
                diff++;
            }
            while(diff>k){
                if(nums[i]==0){
                    diff--;
                }
                i++;
            }
            j++;
            len=Math.max(len,j-i);

        }
        return len;
    }
}
